<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.amitsin6h.fakenewswatch.Detail">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/jamshedpur"/>


            <TextView
                android:id="@+id/title_one"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>


            <TextView
                android:id="@+id/content_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <RelativeLayout
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textColor="#2ecc71"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/true_"
                    android:text="TRUE 15%"/>

                <TextView
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#3498db"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/true_"
                    android:id="@+id/rumor_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RUMOR 80%"/>

                <TextView
                    android:textSize="15dp"
                    android:textColor="#e74c3c"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/rumor_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAKE 5%"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
